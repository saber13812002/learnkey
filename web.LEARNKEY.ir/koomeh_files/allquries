$(".desktop li a").each(function(){$(this).attr("href")==location.pathname&&($(".desktop li a").removeClass("active"),$(".desktop li a").removeClass("th-yellow"),$(".desktop li a").removeClass("button"),$(this).addClass("active"),$(this).addClass("th-yellow"),$(this).addClass("button"))});$(".typetab li a").each(function(){$(this).attr("href")==location.pathname&&($(".typetab li a").removeClass("ok"),$(this).addClass("ok"))});$(".tabs li").click(function(){$(".tabs li").removeClass("active");$(this).addClass("active")});$(".digits").keydown(function(n){$.inArray(n.keyCode,[46,8,9,27,13,190])!==-1||n.keyCode==65&&n.ctrlKey===!0||n.keyCode>=35&&n.keyCode<=39||(n.shiftKey||n.keyCode<48||n.keyCode>57)&&(n.keyCode<96||n.keyCode>105)&&n.preventDefault()});$(document).ready(function(){var i=10,t=$(".input_fields_wrap"),r=$(".add_field_button"),n=1;$(r).click(function(r){r.preventDefault();n<i&&(n++,$(t).append('<div class="removeimg"><input type="file" name="file'+n+'" onclick="GetFileSize(this,2024)"/><a href="#" class="remove_field">پاک کردن<\/a><p class="Err"><\/p><\/div>'))});$(t).on("click",".remove_field",function(t){t.preventDefault();$(this).parent("div").remove();n--})});$("#Dealtype").change(function(){$("#Dealtype").val()==2?($("#Documenttype").hide(),$("#Loan").hide(),$("#Price").hide(),$("#Loanpay").hide(),$("#Loanremain").hide(),$("#Loanvalue").hide(),$("#Construct").hide(),$("#Change").hide(),$("#PricePerMeter").hide(),$("#Mortgage").show(),$("#Rent").show(),$("#Dischargedate").show(),$("#Rentnum").show()):($("#Documenttype").show(),$("#Loan").show(),$("#Price").show(),$("#Loanpay").show(),$("#Loanremain").show(),$("#Loanvalue").show(),$("#Construct").show(),$("#Change").show(),$("#PricePerMeter").show(),$("#Mortgage").hide(),$("#Rent").hide(),$("#Dischargedate").hide(),$("#Rentnum").hide())});$("#HasBuilding").change(function(){$("#HasBuilding").is(":checked")?($("#BuildingFloorNum").show(),$("#BuildingInfrastructure").show(),$("#BuildingArea").show()):($("#BuildingFloorNum").hide(),$("#BuildingInfrastructure").hide(),$("#BuildingArea").hide())})